#!/bin/bash

# Define Star Wars ASCII art frames
frame1=$(cat << "EOF"
A long time ago in a galaxy far, far away...

     .-===-.
      ' - '
      |   |        ____.
      |=   |  .- "     " -.
      |    | |           .-'
       '-. | |          |-
          ' - '           |
                           |
                           |
                           |
EOF
)

frame2=$(cat << "EOF"
       ________
    . -======-.
   /___________\__
  |______________|  ==='
   '-.  .-----.  .-'
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
      ||      ||
     _| |    _| |
   _|    |  _|    |
 _|       |__      |
|          |       |
EOF
)

# Clear the terminal
clear

# Loop through frames and display animation
for i in {1..5}; do
    echo "$frame1"
    sleep 1
    clear
    echo "$frame2"
    sleep 1
    clear
done

echo "Episode IV: A New Hope"

